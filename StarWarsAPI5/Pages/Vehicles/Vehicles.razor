@page "/vehicles"

@using StarWarsAPI5.Components

<Searcher OnClear="Clear" OnTextChange="OnInput"></Searcher>

<Pagination TotalPagesQuantity="TotalPageQuantity" CurrentPage="CurrentPage" Radius="2" SelectedPage="SelectedPage" />

<div class="flex-container">
    @if (_Vehicles != null)
    {
        @foreach (var vehicle in _Vehicles)
        {
            <div class="information-box">
                <div style="color: white;"><span style="color: yellow;"> Name:</span> @vehicle.Name</div>
                <div style="color: white;"><span style="color: yellow;"> Model:</span> @vehicle.Model</div>
                <div style="color: white;"><span style="color: yellow;"> Length:</span> @vehicle.Length</div>
                <MoreInformation reference="@($"vehicles/{@vehicle.Name}/{CurrentPage}")"> More Information</MoreInformation>
            </div>
        }
    }
    else
    {
        <Loading/>
    }
</div>